<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sabrinafritz.mergeconflictapp.MainActivity">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/fragmentMain"
        android:name="com.example.sabrinafritz.mergeconflictapp.MainFragment"
        tools:layout="@layout/fragment_main"
        />

    <Button
        android:id="@+id/button_store"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Speichern"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:layout_gravity="center_horizontal|center"
        android:layout_marginBottom="50dp"
        android:id="@+id/editText"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        />

    <TextView

        android:text="Bitte gebe deinen Namen ein"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_width="331dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginBottom="100dp"
        />

</FrameLayout>
